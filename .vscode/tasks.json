			"label": "Preview history keys",
			"type": "shell",
			"command": "python3 scripts/prescribe_loads.py --list-keys | sed -n '1,60p'",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Validate Markdown Links (post Week3)",
			"type": "shell",
			"command": "python3 scripts/validate_links.py",
			"isBackground": false,
			"group": "build"
		}
		,
		{
			"label": "Lint Sessions",
			"type": "shell",
			"command": "python3 scripts/lint_sessions.py",
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Lint Sessions (strict)",
			"type": "shell",
